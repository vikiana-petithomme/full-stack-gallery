<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  </head>
<body>
  <% console.log(myImages.length)%>

<button class="addImgBtn">Add new image</button>

 <div class="addImgForm invis">
  <form action="/images" method="post">
    <span class="close">x</span>
    <label for="urlInput">Enter Url</label>
    <input type="text" name="img" id="urlInput">
    <label for="nameInput">Enter Image Name</label>
    <input type="text" name="name" id="nameInput">
    <button type="submit">submit</button>
  </form>
 </div>

 <p class="invis numOfMyImages"><%= myImages.length %></p>

<div class="allPost container">
  <% for( let i = 0; i < images.length; i++ ) { %>
    <div class="post">
      <div class="postImg">
        <img src="<%=images[i].img%>" id="<%=images[i]._id%>" >
      </div>
      <div class="postBtns">
        <span class="material-symbols-outlined" id="trash">
          delete
          </span>
        <span id="numLikes">
          <span class="material-symbols-outlined" id="heart">
          favorite</span>
          <span class="postLikes"><%=images[i].likes%></span>
        </span>
        <span class="postId"><%= images[i]._id%></span>
      </div>
    </div>
  <% } %>

</div>
<script>
  function loadImage() {
      alert("Image is loaded");
  }
  </script>
<script src="main.js"></script>

</body>
</html>
